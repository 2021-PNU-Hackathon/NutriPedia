<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="270dp"
    android:background="@drawable/pager_background">

    <TextView
        android:id="@+id/giTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginTop="18dp"
        android:text="지방"
        app:layout_constraintStart_toEndOf="@+id/danTv"
        app:layout_constraintTop_toBottomOf="@+id/calPb"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/giPb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="83dp"
        android:layout_height="51dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/danPb"
        app:layout_constraintTop_toBottomOf="@+id/giTv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/danTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="18dp"
        android:text="단백질"
        app:layout_constraintStart_toEndOf="@+id/tanTv"
        app:layout_constraintTop_toBottomOf="@+id/calPb"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/danPb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="71dp"
        android:layout_height="53dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/tanPb"
        app:layout_constraintTop_toBottomOf="@+id/danTv"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/tanPb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="67dp"
        android:layout_height="56dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanTv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tanTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"
        android:text="탄수화물"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calPb"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/calPb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="298dp"
        android:layout_height="70dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/weightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 몸무게"
        app:layout_constraintBottom_toTopOf="@+id/calTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/calTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="23dp"
        android:text="총 섭취량"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightTv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/calTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
